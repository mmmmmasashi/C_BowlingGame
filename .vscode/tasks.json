{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build-test",
            "type": "shell",
            "command": "make -f Makefile.test",
            "group": {
                "kind": "build",
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./fizzbuzz",
            "dependsOn": "build",
            "group": {
                "kind": "test",
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "./unittest",
            "dependsOn": "build-test",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}